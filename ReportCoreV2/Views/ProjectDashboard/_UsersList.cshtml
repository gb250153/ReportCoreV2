@model ReportCoreV2.Models.ViewModel.ProjectDashboardViewModel

<link rel="stylesheet" type="text/css" href="~/DataTables/datatables.min.css" />
<style>
    thead {
        text-align: left;
        color: #28a745;
        font-style: oblique;
    }

    tbody {
        text-align: left;
    }
</style>

@{
    ViewData["Title"] = "Display Data";
    string[] TableHeaders = new string[] {"Name"
                        ,"No. of scenarios"
                        ,"Last Update"};
}


@{
    if (Model.ProjectUsersList.Count != 0)
    {



        <div class="table">

            <table id="myTable" class="table table-borderless table-light table-sm">
                <thead>
                    <tr>
                        @{
                            foreach (var head in TableHeaders)
                            {
                                <th>
                                    @head
                                </th>
                            }
                        }
                    </tr>
                </thead>
                <tbody>
                    @{ if (Model != null)
                        {
                            foreach (var Data in Model.ProjectUsersList)
                            {
                                <tr>
                                    <td>@Data.Name</td>
                                    <td>@Data.AmountCreated</td>
                                    <td>@Data.LastCreated.ToString("dd/MM/yyyy")</td>

                                </tr>
                            }


                        }
                    }
                </tbody>
            </table>


        </div>

    }
    else
    {
        <header>
            <h5>No Data to Display</h5>
        </header>
        <section>
            <div class=" row" >
                <div class=" col-md-3 col-sm-4">
                    <h4></h4>
                </div>

            </div>

        </section>

    }

}



<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript" src="~/DataTables/datatables.min.js"></script>
